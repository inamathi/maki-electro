---
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import BackToTop from "@/components/common/BackToTop.astro";
import "../styles/style.scss";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- BASE_URL確認 -->
    <meta name="debug-base-url" content={import.meta.env.BASE_URL} />
    <title>Maki Electro</title>
  </head>
  <body>
    <div class="site">
      <Header />
      <main class="site-main">
        <slot />
      </main>
      <Footer />
    </div>
    <BackToTop threshold={100} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  .l-root {
    min-height: 100dvh; /* アドレスバーを考慮したビューポート高 */
    display: flex;
    flex-direction: column;
  }
  .l-root :global(footer) {
    margin-top: auto; /* これでフッターが最下部へ押し下げられる */
  }

  /* 念のため余白リセット（未設定なら） */
  :global(html, body) {
    margin: 0;
  }
</style>

<script is:inline>
  (function () {
    var base = import.meta.env.BASE_URL || "/";
    if (base === "/") {
      // BASE_URL が "/" の時は SITE から推定
      try {
        var sp = new URL(import.meta.env.SITE || "", location.origin).pathname;
        if (sp && sp !== "/") base = sp.endsWith("/") ? sp : sp + "/";
      } catch {}
    }
    if (base === "/") return; // ルートなら何もしない

    // 取りこぼしの内部リンクに前置
    document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll('a[href^="/"]').forEach(function (a) {
        var h = a.getAttribute("href");
        if (!h || h.startsWith(base)) return;
        a.setAttribute("href", base + h.replace(/^\//, ""));
      });
    });
  })();
</script>
