---
import Footer from "@/components/common/Footer.astro";
import Header from "@/components/common/Header.astro";
import "../styles/style.scss";

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = "サイト名",
  description = "サイト説明",
  lang = "ja",
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="description" content={description} />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <div class="site">
      <main class="site-main">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  .site {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }
  .site-main {
    flex: 1;
    padding: 40px 0;
  } /* ここが“余白”を受け持つ */
</style>
